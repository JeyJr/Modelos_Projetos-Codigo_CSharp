<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
    x:Class="AppGallery.AppFlyout"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:AppGallery.Views"
    Title="AppFlyout"
    FlyoutLayoutBehavior="Popover">

    <!--  Menu lateral que sera 'ocultado'  -->
    <FlyoutPage.Flyout>
        <pages:Menu />
    </FlyoutPage.Flyout>

    <!--  Tela principal  -->
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <pages:MainPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>