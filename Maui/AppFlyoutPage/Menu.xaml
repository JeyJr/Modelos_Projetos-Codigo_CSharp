    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Menu"
    BackgroundColor="LightGray">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Menu"
            VerticalOptions="Center" />

        <Button x:Name="btnPg1" BackgroundColor="Transparent" Text="Página 1" Clicked="btnPg1_Clicked"/>
        <Button x:Name="btnPg2" BackgroundColor="Transparent" Text="Página 2" Clicked="btnPg2_Clicked"/>
        <Button x:Name="btnPg3" BackgroundColor="Transparent" Text="Página 3" Clicked="btnPg3_Clicked"/>
    </VerticalStackLayout>
</ContentPage>