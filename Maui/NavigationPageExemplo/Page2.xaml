<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavigationPageExemplo.Page2"
             Title="Page2"
             Loaded="Page2_Loaded">
    <Grid>
        <!-- Definição de Linhas -->
        <Grid.RowDefinitions>
            <RowDefinition x:Name="rowMTop" Height="10"/>
            <RowDefinition x:Name="rowTop" Height="20*"/>
            <RowDefinition x:Name="rowMid" Height="70*"/>
            <RowDefinition x:Name="rowBot" Height="10*">
            </RowDefinition>
            <RowDefinition x:Name="rowMBot" Height="10"/>
        </Grid.RowDefinitions>

        <HorizontalStackLayout x:Name="boxTop" BackgroundColor="Red" Grid.Row="1">
        </HorizontalStackLayout>
        <HorizontalStackLayout x:Name="boxMid" BackgroundColor="Green" Grid.Row="2">
        </HorizontalStackLayout>
        <HorizontalStackLayout x:Name="boxBot" HorizontalOptions="Fill" BackgroundColor="Blue" Grid.Row="3">
            <Button x:Name="btnVoltar" Text="Voltar" WidthRequest="100" Clicked="btnVoltar_Clicked" Grid.Column="2"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>