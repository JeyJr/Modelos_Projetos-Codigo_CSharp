<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TiposLayout.Views.AbsoluteLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Style="{DynamicResource Key=LayoutPage}">

    <!--  Posicionamento fixo dos elementos  -->
    <AbsoluteLayout>

        <BoxView
            AbsoluteLayout.LayoutBounds="100, 100, 600,600"
            AbsoluteLayout.LayoutFlags="None"
            Color="CadetBlue" />
        <Label
            AbsoluteLayout.LayoutBounds="0.6, 0.2, 200, 40"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Text="Olá mundo!" />
        <Button
            AbsoluteLayout.LayoutBounds="0.5, 0.5, 200, 60"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Text="Começar!" />

    </AbsoluteLayout>
</ContentPage>